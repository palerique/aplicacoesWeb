<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="">
  <property name="hibernate.connection.driver_class">org.hsqldb.jdbcDriver</property>
  <property name="hibernate.connection.url">jdbc:hsqldb:file:base.db</property>
  <!-- <property name="hibernate.connection.url">jdbc:hsqldb:file:base.db;shutdown=true</property> 
 <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521/xe</property> -->
  <property name="hibernate.connection.username">sa</property>
  <property name="connection.password"/>
  <property name="show_sql">true</property>
  <property name="format_sql">true</property>
  <!-- testes -->
  <property name="hibernate.transaction.factory_class">org.hibernate.transaction.JDBCTransactionFactory</property>
  <property name="hibernate.current_session_context_class">thread</property>
  <!-- Fim dos testes -->
  <property name="hbm2ddl.auto">update</property>
  <!-- <property name="hbm2ddl.auto">create</property> 
 C3P0 -->
  <property name="hibernate.connection.provider_class">org.hibernate.connection.C3P0ConnectionProvider</property>
  <property name="hibernate.c3p0.min_size">5</property>
  <property name="hibernate.c3p0.max_size">20</property>
  <property name="hibernate.c3p0.timeout">300</property>
  <property name="hibernate.c3p0.max_statements">50</property>
  <property name="hibernate.c3p0.idle_test_period">3000</property>
  <!-- Cache de Segundo Nivel -->
  <property name="hibernate.cache.use_second_level_cache">true</property>
  <property name="hibernate.cache.use_query_cache">true</property>
  <property name="cache.provider_class">org.hibernate.cache.OSCacheProvider</property>
  <!-- Mapeamentos -->
  <mapping class="br.org.universa.aplicacoesWeb.dominio.Cliente"/>
 </session-factory>
</hibernate-configuration>
